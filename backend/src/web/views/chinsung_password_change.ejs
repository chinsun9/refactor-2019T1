<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title><%= title %></title>

  <!-- Custom fonts for this template-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css">  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">
  <link href="/css/chinsung_password_change.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">


    <!-- Sidebar -->
    <%include Sidebar%>
    <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

        <!-- Topbar -->
        <%include Topbar%>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">비밀번호 변경</h1>


          <div class="p-5">
            <div class="text-center">
            </div>

            <form name="userprofile" class="user" method="POST" action="/web/profile/change">
              <div class="form-group row">
                <input type="password" name="oldPw" class="form-control form-control-user" id="exampleFirstName"
                  placeholder="Old password">
              </div>
              <div class="form-group row">
                <input type="password" name="newPw1" class="form-control form-control-user" id="exampleFirstName"
                  placeholder="New password">
              </div>
              <div class="form-group row">
                <input type="password" name="newPw2" class="form-control form-control-user" id="exampleFirstName"
                  placeholder="Confirm new password">
              </div>


              <div class="form-group row">
              <a href="javascript:userprofile.submit();" class="btn btn-primary btn-user btn-block">
                수정 완료!
              </a>
              </div>
            </form>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->


      <!-- Footer -->
      <%include footer.html%>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%include logoutConfirm%>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>
  <script src="/js/chinsung_profile_edit.js"></script>

  <script src="/js/contsrch.js"></script>    <!-- 제이쿼리를 이용한 ctrl + F(검색) 출처 : http://blog.nachal.com/775 -->
  <script src="/js/chinsung_core.js"></script>    <!-- 제이쿼리를 이용한 ctrl + F(검색) 출처 : http://blog.nachal.com/775 -->

</body>

</html>
